<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/pg_background">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="@color/pg_background_2"
                android:centerY="1.0"
                android:endColor="@color/pg_background_3"
                android:startColor="@color/pg_background_1" />
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <item android:id="@+id/progress">
        <clip>
            <shape>
                <gradient
                    android:endColor="@color/progress_2"
                    android:startColor="@color/progress_1"
                    android:useLevel="false"/>
                <corners android:radius="10dp"/>
            </shape>
        </clip>
    </item>
</layer-list>